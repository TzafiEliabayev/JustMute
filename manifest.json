{
  "manifest_version": 2,

  "name": "Just Mute",
  "description": "This extension mutes tabs",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icons/mute.png",
    // "default_icon": {                    // optional
    //         "16": "images/icon16.png",           // optional
    //         "24": "images/icon24.png",           // optional
    //         "32": "images/icon32.png"            // optional
    //       },
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": [
      "js/background.js"
    ]
  },

  "permissions": [
    "tabs",
    "background"
  ]
}